  <header>
    <nav>
      <a href="/blog/">← ブログトップ</a>
      <a href="/">会社サイトへ</a>
    </nav>
  </header>
  
  <main>
    <article>
      <h1>{title}</h1>
      <time datetime={date}>{new Date(date).toLocaleDateString('ja-JP')}</time>
      <slot />
    </article>
  </main>
  
  <footer>
    <p>© 2025 toshi776.com</p>
  </footer>
</body>
</html>